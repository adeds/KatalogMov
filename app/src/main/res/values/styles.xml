<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>
    <style name="matchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

    </style>
    <style name="matchHeight">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>

    </style>
    <style name="matchWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>
    <style name="backGroundEdit" parent="matchWidth">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="editSearch" parent="matchWidth">
        <item name="android:background">@drawable/round_sq_background</item>
        <item name="android:drawableLeft">@drawable/ic_search_black_24dp</item>
        <item name="android:hint">@string/search</item>
    </style>
</resources>
